// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Saved {
  id               String          @id @default(uuid())
  title            String
  imageUrl         String
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  malId            Int
  userId           String
  user             User            @relation(fields: [userId], references: [id])
  favouriteAnime   FavouriteAnime? @relation(fields: [favouriteAnimeId], references: [id])
  favouriteAnimeId String?         @unique
  WatchLater       WatchLater?     @relation(fields: [watchLaterId], references: [id])
  watchLaterId     String?         @unique
}

model FavouriteAnime {
  id    String @id @default(uuid())
  saved Saved?
}

model WatchLater {
  id    String @id @default(uuid())
  saved Saved?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  Saved         Saved[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
